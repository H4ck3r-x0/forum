@layout('layouts/master')
@section('content')
@set('posts', posts.toJSON())
<div class="box">
  <div class="section">
    @if(posts.data.length)
      @each(post in posts.data)
        @include('posts/includes/post')
      @endeach
    @else
    <p>There are no posts.</p>
    @endif
  </div>
  @if(posts.data.length)
    <div class="section is-paddingless">
      @!component('common/pagination.edge', pagination = posts)
    </div>
  @endif
</div>
@endsection
